<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:tools="http://schemas.android.com/tools"    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"

    tools:context="com.example.thandiwe.myprojectschool.RegisterActivity">



    <ScrollView


        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true">

        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Register Here"
                android:textAlignment="center"
                android:layout_margin="10dp"
                />

            <EditText
                android:id="@+id/editText7"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="Child's Name"
                android:inputType="textPersonName" />

            <EditText
                android:id="@+id/editText8"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentEnd="true"
                android:layout_alignParentTop="true"
                android:inputType="textPersonName"
                android:hint="Child's Surname" />
            <EditText
                android:id="@+id/editText9"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="textPersonName"
                android:hint="ID Number"/>

            <EditText
                android:id="@+id/editText10"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="textPersonName"
                android:hint="Address"/>


            <Spinner
                android:id="@+id/spinnerGender"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:entries="@array/gender">
                </Spinner>

            <Spinner
                android:id="@+id/spinnerRace"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:entries="@array/race">
            </Spinner>

            <Spinner
                android:id="@+id/spinnerH_Language"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:entries="@array/HLanguage">
            </Spinner>

            <Spinner
                android:id="@+id/spinnerI_Language"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:entries="@array/ILanguage">
            </Spinner>

            <TextView
                android:id="@+id/lblDateBirth"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:text="Date of Birth "
                />

            <Spinner
                android:id="@+id/spinnerDate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:entries="@array/date">
            </Spinner>


            <Spinner
                android:id="@+id/spinnerMonth"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:entries="@array/month">
            </Spinner>


            <EditText
                android:id="@+id/et_year"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="10dp"
                android:hint="year" />

            <TextView
                android:id="@+id/tvDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textAppearance="?android:attr/textAppearanceLarge" />


            <TextView
                android:id="@+id/textView1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Parent(s) Information"
                android:textAlignment="center"
                android:onClick="Parents"
                android:layout_margin="10dp"
                />
            <TextView
                android:id="@+id/text_parents"
                android:layout_height="match_parent"
                android:layout_width="match_parent"
                android:text="Mother"
                android:layout_margin="10dp"
                android:textAlignment="center"
                android:textStyle="bold"
                />

            <EditText
                android:id="@+id/et_mother"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="10dp"
                android:hint="mother's Full Name" />

            <EditText
                android:id="@+id/et_email1"
                android:layout_width="354dp"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="Email"
                android:inputType="textEmailAddress" />

            <EditText
                android:id="@+id/et_phone1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="phone"
                android:hint="Phone Number"/>


            <TextView
                android:id="@+id/text_parent1"
                android:layout_height="match_parent"
                android:layout_width="match_parent"
                android:text="Father"
                android:layout_margin="10dp"
                android:textAlignment="center"
                android:textStyle="bold"
                />

            <EditText
                android:id="@+id/et_father"
                android:layout_height="match_parent"
                android:layout_width="match_parent"
                android:layout_margin="10dp"
                android:hint="Father's Name"/>

            <EditText
                android:id="@+id/et_email2"
                android:layout_width="357dp"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="Email"
                android:inputType="textEmailAddress" />

            <EditText
                android:id="@+id/et_phone2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="phone"
                android:hint="Phone Number"/>

            <TextView
                android:id="@+id/txt_medical"
                android:layout_height="match_parent"
                android:layout_width="match_parent"
                android:text="Medical"
                android:layout_margin="10dp"
                android:textAlignment="center"
                android:textStyle="bold"
                />

            <EditText
                android:id="@+id/et_doc"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="10dp"
                android:hint="Docter's name" />


            <EditText
                android:id="@+id/et_allergies"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="10dp"
                android:hint="Allergies" />




            <Button
                android:id="@+id/save"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="10dp"
                android:text="Add Data"
                />

        </LinearLayout>



    </ScrollView>



</RelativeLayout>



